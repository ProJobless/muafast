<?xml version="1.0"?><config>    <modules>        <Luclong_Tools>            <version>0.1.0</version>        </Luclong_Tools>    </modules>    <frontend>        <routers>            <tools>                <use>standard</use>                <args>                    <module>Luclong_Tools</module>                    <frontName>tools</frontName>                </args>            </tools>        </routers>        <layout>            <updates>                <tools>                    <file>luclong_tools.xml</file>                </tools>            </updates>        </layout>    </frontend>    <admin>        <routers>            <tools>                <use>admin</use>                <args>                    <module>Luclong_Tools</module>                    <frontName>tools</frontName>                </args>            </tools>        </routers>    </admin>    <adminhtml>        <menu>            <luclong_tools module="tools">                <title>Tools</title>                <sort_order>71</sort_order>            </luclong_tools>       </menu>           </adminhtml>        <global>                <template>        </template>        <resources>            <tools_setup>                <setup>                    <module>Luclong_Tools</module>                </setup>                <connection>                    <use>core_setup</use>                </connection>            </tools_setup>            <tools_write>                <connection>                    <use>core_write</use>                </connection>            </tools_write>            <tools_read>                <connection>                    <use>core_read</use>                </connection>            </tools_read>        </resources>                <blocks>            <tools>                <class>Luclong_Tools_Block</class>            </tools>                    </blocks>        <helpers>            <tools>                <class>Luclong_Tools_Helper</class>            </tools>        </helpers>    </global></config>
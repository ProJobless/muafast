<?xml version="1.0"?><config>    <modules>        <PLUTUS_Home>            <version>0.1.0</version>        </PLUTUS_Home>    </modules>    <frontend>        <routers>            <home>                <use>standard</use>                <args>                    <module>PLUTUS_Home</module>                    <frontName>home</frontName>                </args>            </home>        </routers>        <layout>            <updates>                <home>                    <file>plutus_home.xml</file>                </home>            </updates>        </layout>    </frontend>    <admin>        <routers>            <home>                <use>admin</use>                <args>                    <module>PLUTUS_Home</module>                    <frontName>home</frontName>                </args>            </home>        </routers>    </admin>    <adminhtml>        <menu>            <plutus_home module="home">                <title>Home</title>                <sort_order>71</sort_order>            </plutus_home>       </menu>           </adminhtml>        <global>        <rewrite>            <plutus_home_checkout_cart>                <from><![CDATA[#^/checkout/cart/#]]></from>            	<to>/home/checkout_cart/</to>            </plutus_home_checkout_cart>        </rewrite>        <models>                              </models>        <template>                    </template>        <resources>            <home_setup>                <setup>                    <module>PLUTUS_Home</module>                </setup>                <connection>                    <use>core_setup</use>                </connection>            </home_setup>            <home_write>                <connection>                    <use>core_write</use>                </connection>            </home_write>            <home_read>                <connection>                    <use>core_read</use>                </connection>            </home_read>        </resources>                <blocks>            <home>                <class>PLUTUS_Home_Block</class>            </home>            <catalog>                 <rewrite>                    <navigation>PLUTUS_Home_Block_Catalog_Navigation</navigation>                </rewrite>            </catalog>        </blocks>        <helpers>            <home>                <class>PLUTUS_Home_Helper</class>            </home>        </helpers>    </global></config>
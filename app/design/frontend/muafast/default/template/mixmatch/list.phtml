?>
<div class="mm-bt-bar">
	<a class="back mm-bt" style="cursor: pointer;" > << Back</a>

	<?php $page = $this->getRequest()->getParam('p'); ?>
	<?php if($page > 1): ?>
	<a class="mixnmatch_ajax mm-bt" href="<?php echo $this->getRequest()->getParam('url'); ?>" p="<?php echo (int)$page - 1; ?>"> < Prev</a>

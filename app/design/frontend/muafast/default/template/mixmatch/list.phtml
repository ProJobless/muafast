	<a class="mixnmatch_ajax mm-bt" href="<?php echo $this->getRequest()->getParam('url'); ?>" p="<?php echo (int)$page + 1; ?>">Next > </a>
	<?php endif; ?>

	
</div>
<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>
<?php if(!$_productCollection->count()): ?>
<p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
    <?php $_collectionSize = $_productCollection->count() ?>
    <?php $_columnCount = 4; ?>
	  <ul class="products-grid">
    <?php $i=0; foreach ($_productCollection as $_product): ?>
     
            <li id="<?php echo $_product->getId() ?>" class="<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>">
                <a title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>"style="background: url('<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(150); ?>') no-repeat center center transparent;" >
				<span class="mm-items-hover">
					Ao nu mau hong nhat
				</span>
				</a>
            </li>
       
        <?php endforeach ?>
		</ul>
<?php endif; ?>
